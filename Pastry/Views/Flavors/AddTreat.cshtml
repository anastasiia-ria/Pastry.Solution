@{
  Layout = "_Layout";
}

@model Pastry.Models.Flavor

<h2>Add a treat</h2>

<h4>Add a treat to this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select treat")
  @Html.DropDownList("TreatId")

  <input type="submit" class="button"  value="Save" />
}

<p class="button">@Html.ActionLink("Back to list", "Index")</p>