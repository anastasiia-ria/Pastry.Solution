@{
  Layout = "_Layout";
}

@model Pastry.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @required = "required", @class="input"})

  <input type="submit" class="button"  value="Add new flavor" class="btn btn-default" />
}
<p class="button">@Html.ActionLink("Show all flavors", "Index")</p>