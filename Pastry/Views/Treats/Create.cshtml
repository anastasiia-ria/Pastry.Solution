@{
  Layout = "_Layout";
}

@model Pastry.Models.Treat

<h4>Add a new treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @required = "required", @class="input"})
  <input type="submit" class="button"  value="Add new treat" />
}
<p class="button">@Html.ActionLink("Show all treats", "Index")</p>